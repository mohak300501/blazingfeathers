rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Birds collection - readable by everyone, writable by admins only
    match /birds/{birdId} {
      allow read: if true; // Anyone can read bird data
      allow create, update, delete: if false; // Only through server-side functions
    }
    
    // Users collection - users can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Photos subcollection - readable by everyone, writable by photo owner or admin
    match /birds/{birdId}/photos/{photoId} {
      allow read: if true; // Anyone can view photos
      allow create: if request.auth != null; // Logged in users can upload
      allow update, delete: if request.auth != null && 
        (resource.data.uploadedBy == request.auth.token.name || 
         request.auth.token.email in ['admin@blazingfeathers.com']); // Owner or admin
    }
  }
} 